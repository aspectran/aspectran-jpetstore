<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <description>
        Servlet context configuration for H2 Console.
    </description>

    <bean id="tow.context.h2console.servletContext"
          class="com.aspectran.undertow.server.servlet.TowServletContext"
          scope="prototype">
        <property name="deploymentName">h2console</property>
        <property name="contextPath">/h2-console</property>
        <property name="servlets" type="array">
            <bean class="com.aspectran.undertow.server.servlet.TowServlet">
                <argument>H2Console</argument>
                <argument>org.h2.server.web.JakartaWebServlet</argument>
                <property name="mappings" type="array">
                    <value>/*</value>
                </property>
                <property name="loadOnStartup" valueType="int">1</property>
            </bean>
        </property>
    </bean>

</aspectran>

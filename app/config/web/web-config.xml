<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        An Aspectran configuration for the Web Application.
        Note that names of translets that match the request URI
        always start with a forward slash (/).
    </description>

    <bean id="defaultJspTemplate" class="com.aspectran.web.support.view.JspTemplateViewDispatcher">
        <description>
            Register a JSP Template View Dispatcher.
        </description>
        <properties>
            <item name="contentType">text/html</item>
            <item name="template">/WEB-INF/jsp/templates/default.jsp</item>
            <item name="includePageKey">INCLUDE_PAGE</item>
        </properties>
    </bean>

    <aspect id="defaultTransletSettings">
        <description>
            Specifies the environment variables used during request and response processing.
        </description>
        <joinpoint target="translet"/>
        <settings>
            <setting name="characterEncoding" value="utf-8"/>
            <setting name="viewDispatcher" value="defaultJspTemplate"/>
            <setting name="indentString" value="  "/>
        </settings>
    </aspect>

    <append file="/config/web/common/static-codes.xml"/>
    <append file="/config/web/common/user.xml"/>

</aspectran>
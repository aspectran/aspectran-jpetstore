<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        Defines code used for simple purposes.
    </description>

    <!-- Frequently used code bundles-->
    <environment>
        <properties>
            <item name="staticCodes" type="map">
                <value name="languages">%{languages}</value>
                <value name="categories">%{categories}</value>
                <value name="creditCardTypes">%{creditCardTypes}</value>
            </item>
        </properties>
    </environment>

    <environment>
        <properties>
            <item name="languages" type="map">
                <value name="english">English</value>
                <value name="german">German</value>
                <value name="french">French</value>
                <value name="korean">Korean</value>
                <value name="japanese">Japanese</value>
            </item>
            <item name="categories" type="map">
                <value name="FISH">FISH</value>
                <value name="DOGS">DOGS</value>
                <value name="REPTILES">REPTILES</value>
                <value name="CATS">CATS</value>
                <value name="BIRDS">BIRDS</value>
            </item>
            <item name="creditCardTypes" type="map">
                <value name="Visa">Visa</value>
                <value name="MasterCard">MasterCard</value>
                <value name="American Express">American Express</value>
            </item>
        </properties>
    </environment>

</aspectran>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        Defines code used for simple purposes.
    </description>

    <!-- Frequently used code bundles-->
    <environment>
        <properties>
            <item name="staticCodes" type="map">
                <entry name="languages">%{languages}</value>
                <entry name="categories">%{categories}</value>
                <entry name="creditCardTypes">%{creditCardTypes}</value>
            </item>
        </properties>
    </environment>

    <environment>
        <properties>
            <item name="languages" type="map">
                <entry name="english">English</value>
                <entry name="german">German</value>
                <entry name="french">French</value>
                <entry name="korean">Korean</value>
                <entry name="japanese">Japanese</value>
            </item>
            <item name="categories" type="map">
                <entry name="FISH">Fish</value>
                <entry name="DOGS">Dogs</value>
                <entry name="REPTILES">Reptiles</value>
                <entry name="CATS">Cats</value>
                <entry name="BIRDS">Birds</value>
            </item>
            <item name="creditCardTypes" type="map">
                <entry name="Visa">Visa</value>
                <entry name="MasterCard">MasterCard</value>
                <entry name="American Express">American Express</value>
            </item>
        </properties>
    </environment>

</aspectran>
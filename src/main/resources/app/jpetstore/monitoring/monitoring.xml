<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <settings>
        <setting name="transletNamePrefix" value="/monitoring"/>
    </settings>

    <translet name="/">
        <echo id="page">
            <item name="headline">Application Monitoring</item>
            <item name="teaser">Analyze application logging messages to visually express the frequency of web requests based on the user's session usage history.</item>
            <item name="style">fluid</item>
        </echo>
        <dispatch name="monitoring/monitoring"/>
    </translet>

    <bean id="logTailerManager" class="app.jpetstore.monitoring.log.LogTailerManager">
        <argument>#{class:app.jpetstore.monitoring.log.LogtailEndpoint}</argument>
        <argument type="array">
            <bean class="app.jpetstore.monitoring.log.LogTailer">
                <argument>app-log</argument>
                <argument>#{basePath}/logs/app.log</argument>
            </bean>
        </argument>
    </bean>

</aspectran>
